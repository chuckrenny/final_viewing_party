<h1>Viewing Party</h1>
<% if @search_params == 'top rated' %>
  <h3>Top 20 Movies</h3>
<% else %>
  <h3>Movie Search</h3>
<% end %>
<br>
<%= button_to 'Discover Page', user_discover_path(@user), method: :get %><br>
<% @movies.each do |movie| %>
  <ul class="movie">
    <div style="flex: 2; text-align: left">
      <%= movie.title %>
    </div>
    <div style="flex: 1; text-align: right">
      Rating: <%= movie.rating.round(1) %>
    </div>
  </ul>
<% end %>