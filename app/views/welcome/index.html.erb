<h1>Viewing Party</h1>

<% if session[:user_id] %>
  <h2>Existing Users</h2>
  <ul id="existing_users">
    <% @users.each do |user| %>
        <li><%= user.email, "users/#{user.id}" %></li>
    <% end %>
  </ul>
  <%= button_to 'Log Out', logout_path, method: :get, class: "btn btn-lg btn-outline-secondary" %>
<% else %>
  <%= button_to 'Create New User', register_user_path, method: :get, class: "btn btn-lg btn-outline-secondary" %><br>
  <%= button_to 'Log In', login_path, method: :get, class: "btn btn-lg btn-outline-secondary" %><br>
<% end %>